<% content_for :title do %>
  Driver
<% end %>


<section class="entity-table">
  <h1 class="mb-3">Driver <%= @driver.name + " " + @driver.surname %></h1>

  <div class="table-container">
    <table class="table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Surname</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Vehicle</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @driver.name %></td>
          <td><%= @driver.surname %></td>
          <td><%= @driver.contact_number %></td>
          <td><%= @driver.email %></td>
          <% if @driver.vehicle_id == nil %>
            <td><%= "None" %></td>
          <% else %>
            <td><%= link_to "#{@driver.vehicle.brand + " " + @driver.vehicle.model}", vehicle_path(@driver.vehicle_id), class: "link-opacity-100-hover" %></td>
          <% end %>
          <td>
            <div class="action-container">
              <%= link_to "Back", drivers_path, class: "btn btn-primary back-button" %>
              <%= link_to "Edit", edit_driver_path(@driver), class: "btn btn-primary edit-button" %>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</section>
