<% content_for :title do %>
MAKE DEL
<% end %>

<section class="overlay">
	<div class="overlay__slogan-wrapper">
		<p class="overlay__slogan">Where your needs meet our expertise â€” MAKE Delivery.</p>
		<p class="overlay__description">
			At MAKE Delivery, we turn logistics into a seamless experience. Our mission is to ensure your goods are delivered efficiently, reliably, and always on time. From local to international shipments, we tailor our services to meet your needs, providing innovative solutions that drive your business forward. With MAKE Delivery, you can trust that your success is our priority.
		</p>
	</div>
</section>

<main class="content">
	<div class="content__image-container">
		<div class="content__image-first-row">

			<%# Check out tracklist %>

			<%= link_to orders_path, class: "content__image-href animated-from-left" do %>
				<%= content_tag :span, class: "content__image-text" do %>
					Check out tracklist
					<%= content_tag :i, "", class: "fa-solid fa-arrow-right" %>
				<% end %>
				<%= content_tag :div, class: "content__image-wrapper" do %>
					<%= image_tag "https://plus.unsplash.com/premium_photo-1661963219843-f1a50a6cfcd3?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8dHJ1Y2tzfGVufDB8fDB8fHww", class: "content__image", alt: "MAKE tracking list" %>
				<% end %>
			<% end %>

			<%# About Us %>

			<%= link_to about_path, class: "content__image-href animated-from-right" do %>
				<%= content_tag :span, class: "content__image-text" do %>
					About Us
					<%= content_tag :i, "", class: "fa-solid fa-arrow-right" %>
				<% end %>
				<%= content_tag :div, class: "content__image-wrapper" do %>
					<%= image_tag "https://img.freepik.com/free-photo/professional-truck-driver-front-long-transportation-vehicle-holding-thumbs-up-ready-new-ride_342744-1343.jpg", class: "content__image", alt: "About us" %>
				<% end %>
			<% end %>

		</div>

		<div class="content__image-second-row">

			<%# FAQ %>

			<%= link_to faq_path, class: "content__image-href animated-from-left" do %>
				<%= content_tag :span, class: "content__image-text" do %>
					FAQ
					<%= content_tag :i, "", class: "fa-solid fa-arrow-right" %>
				<% end %>
				<%= content_tag :div, class: "content__image-wrapper" do %>
					<%= image_tag "https://plus.unsplash.com/premium_photo-1682144324433-ae1ee89a0238?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NXx8dHJ1Y2t8ZW58MHx8MHx8fDA%3D", class: "content__image", alt: "About us" %>
				<% end %>
			<% end %>

			<%# Decisions for business %>

			<%= link_to decisions_for_business_path, class: "content__image-href animated-from-right" do %>
				<%= content_tag :span, class: "content__image-text" do %>
					Decisions for business
					<%= content_tag :i, "", class: "fa-solid fa-arrow-right" %>
				<% end %>
				<%= content_tag :div, class: "content__image-wrapper" do %>
					<%= image_tag "https://media.istockphoto.com/id/169998821/photo/truckers-and-tablet.jpg?s=612x612&w=0&k=20&c=wmJ6PxmMAmaQtYHZqo3vm9n68K99NaDb3f03yLHuTwU=", class: "content__image", alt: "About us" %>
				<% end %>
			<% end %>

		</div>
	</div>
</main>
