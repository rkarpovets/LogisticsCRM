<% content_for :title do %>
  Product
<% end %>

<section class="entity-table">
  <h1 class="mb-3"><%= @product.name %></h1>

  <div class="table-container">
    <table class="table-bordered">
      <thead>
      <tr>
        <th>Product</th>
        <th>Description</th>
        <th>Unit Price</th>
        <th>In stock</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td><%= @product.name %></td>
        <td><%= @product.description %></td>
        <td>$<%= @product.unit_price %></td>
        <td><%= @product.available_quantity %></td>
        <td>
          <div class="action-container">
            <%= link_to "Back", products_path, class: "btn btn-primary back-button" %>
            <%= link_to "Edit", edit_product_path(@product), class: "btn btn-primary edit-button" %>
          </div>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
</section>
