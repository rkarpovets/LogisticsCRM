<% content_for :title do %>
  Vehicles
<% end %>

<section class="entity-table">
  <h1 class="mb-3">Vehicles</h1>
  <%= link_to "Add new vehicle", new_vehicle_path, class: "mb-3 btn btn-primary" %>

  <div class="table-container">
    <table class="table-bordered">
      <thead>
      <tr>
        <th>VIN-code</th>
        <th>Brand</th>
        <th>Model</th>
        <th>Year</th>
        <th>License Plate</th>
        <th></th>
      </tr>
      </thead>
      <% @vehicles.each do |vehicle| %>
        <tbody>
        <tr>
          <td><%= vehicle.vehicle_identification_number %></td>
          <td><%= vehicle.brand %></td>
          <td><%= vehicle.model %></td>
          <td><%= vehicle.year %></td>
          <td><%= vehicle.license_plate_number %></td>
            <td>
              <div class="action-container">
                <%= link_to "Show", vehicle_path(vehicle), class: "btn btn-primary show-button" %>
                <%= button_to "Delete", vehicle, method: :delete, class: "btn btn-danger delete-button" %>
              </div>
            </td>
        </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</section>
